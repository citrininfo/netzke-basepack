<!DOCTYPE html>
<html>
<head>
  <title>Netzke Basepack Test App</title>
  <%= csrf_meta_tag %>
  <%= load_netzke minified: Rails.env.testing?, theme: "neptune" %>
  <% if params[:spec] %>
    <%= javascript_include_tag "/assets/expect/expect.js" %>
    <%= javascript_include_tag "/assets/mocha/mocha.js" %>
    <%= stylesheet_link_tag "/assets/mocha/mocha.css" %>
    <script>
      mocha.setup('bdd');
      mocha.setup({ignoreLeaks: true, timeout: 5000});
      Ext.onReady(function(){
        Netzke.mochaRunner = mocha.run(function(){Netzke.mochaDone = true;});
      });
    </script>
    <%= javascript_include_tag specs_url(path: 'support/action_helper')%>
    <%= javascript_include_tag specs_url(path: 'support/query_helper')%>
    <%= javascript_include_tag specs_url(path: 'support/expectation_helper')%>
    <%= javascript_include_tag specs_url(path: 'support/grid_helper')%>
    <%= javascript_include_tag specs_url(path: params[:spec])%>
  <% end %>
</head>
<body>

<%= yield %>
<div id="mocha"></div>
</body>
</html>
